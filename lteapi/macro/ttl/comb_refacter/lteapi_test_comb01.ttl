; +------- Configurable variable ------------------------------+

; +------------------------------------------------------------+

include '..\comport.ttl'

; +------- Variable -------------------------------------------+


; +------- Batch Config----------------------------------------+

;; ②ログファイル名の設定（ログフィルのフルパス）
;;;; ②−１、保存パスを取得
getdir DIR
dirname FULLPATH DIR
;;;; ②−２、ログファイル名を指定
getdate LOG_NAME '..\..\log\COMB_01_%Y%m%d%H%M%S.log'
;;;; ②−３、フルパス完成（合体）
strconcat FULLPATH LOG_NAME
 
;; ③port接続コマンド作成
COMMAND = '/C=' 
strconcat COMMAND COM_PORT 
strconcat COMMAND ' /BAUD=' 
strconcat COMMAND BAUDRATE
 
;; ④サーバ接続
connect COMMAND

logclose
logopen FULLPATH 0 1 0 1

; +------- Main routine ---------------------------------------+
setdebug 0
setsync 1

call log_open

timeout=60

pause 2

diff=0
uptime varstart

dispstr 'COMB_1_1-3 START'#$0A

while diff<60000
    call get_mem
    dispstr 'API_1_1 START'#$0A
    sendln 'lteapi init'
    wait '[API_OK] lte_initialize return val : "0"' '[API_NG]'
    call check_fail
    dispstr 'API_1_1 SUCCESS'#$0A

    dispstr 'API_2_2 START'#$0A
    sendln 'lteapi fin'
    wait '[API_OK] lte_finalize return val : "0"' '[API_NG]'
    call check_fail
    dispstr 'API_2_2 SUCCESS'#$0A
    call get_mem
    uptime varend
    diff = varend - varstart
endwhile

dispstr 'COMB_1_1-3 SUCCESS'#$0A
dispstr 'COMB_1_4 START'#$0A

sendln 'lteapi init'
wait '[API_OK] lte_initialize return val : "0"' '[API_NG]'
call check_fail

dispstr 'API_3_2 START'#$0A
dispstr 'CB_3_1 START'#$0A

sendln 'lteapi setrestart'
wait '[API_OK]' '[API_NG]'

sendln 'lteapi poweron'
wait '[API_OK]' '[API_NG]'
call check_fail

wait '[CB_VAL] restart_cb reason : "0"' '[CB_VAL] restart_cb reason : "1"'
call check_fail

dispstr 'API_3_2 SUCCESS'#$0A
dispstr 'CB_3_1 SUCCESS'#$0A\
dispstr 'API_2_4 START'#$0A

sendln 'lteapi radioon'
wait '[API_OK]' '[API_NG]'
call check_fail
wait '[CB_VAL]'
if 1!=result then
    dispstr 'CB Timeout'#$0A
endif

sendln 'lteapi actpdn testapn 514 0 2 usr1 pwd'
wait '[API_OK]' '[API_NG]'
call check_fail
wait '[CB_VAL]'
if 1!=result then
    dispstr 'CB Timeout'#$0A
endif

sendln 'lteapi fin'
wait '[API_OK] lte_finalize return val : "0"' '[API_NG]'
call check_fail

dispstr 'API_2_4 SUCCESS'#$0A

dispstr 'COMB_1_4 SUCCESS'#$0A
dispstr 'COMB_1_5 START'#$0A


sendln 'lteapi init'
wait '[API_OK] lte_initialize return val : "0"' '[API_NG]'
call check_fail

sendln 'lteapi setrestart'
wait '[API_OK]' '[API_NG]'

sendln 'lteapi poweron'
wait '[API_OK]' '[API_NG]'
call check_fail

wait '[CB_VAL] restart_cb reason : "0"' '[CB_VAL] restart_cb reason : "1"'
call check_fail

dispstr 'API_5_3 START'#$0A
dispstr 'CB_5_1 START'#$0A

sendln 'lteapi radioon'
wait '[API_OK]' '[API_NG]'
call check_fail
wait '[CB_VAL]'
if 1!=result then
    dispstr 'CB Timeout'#$0A
endif

sendln 'lteapi actpdn testapn 514 0 2 usr1 pwd'
wait '[API_OK]' '[API_NG]'
call check_fail
wait '[CB_VAL] refact_actpdn_cb result'
if 1!=result then
    dispstr 'CB Timeout'#$0A
endif

dispstr 'API_5_3 SUCCESS'#$0A
dispstr 'CB_5_1 SUCCESS'#$0A

dispstr 'COMB_1_5 SUCCESS'#$0A

sendln 'lteapi fin'

pause 2

dispstr 'COMB_01_TEST FINISH'#$0A
dispstr 'Check the memory usage of the log'#$0A
closett
end
; +-------Sub routine ----------------------------------------+

:check_fail
if result!=1 then
    dispstr 'send finish command'#$0A
    sendln 'lteapi fin'
    dispstr 'COMB_01_TEST FAILURE'#$0A
    call error_output
    closett
    end
endif
return
:log_open
    tz="GMT"
    getdate DEBUG_LOG_NAME 'log\comb_01_getmem_%Y%m%d%H%M%S.log'
    fileopen file DEBUG_LOG_NAME 1
    if -1==file then
        messagebox 'File open failed!!' 'Error'
        goto exit
    endif
return
:get_mem
    sendln 'free'
    getdate TIME '[%y:%m:%d/%H-%M-%S]' 
    while 1
        recvln
        strscan inputstr 'Mem:'
        if 0<result then
            filewriteln file TIME
            filewriteln file '             total       used       free    largest'
            filewriteln file inputstr
            break
        endif
    endwhile
return

:error_output
tz="GMT"
getdate DEBUG_LOG_NAME '..\..\log\comb_01_%Y%m%d%H%M%S.error'
fileopen file DEBUG_LOG_NAME 1
if -1==file then
    messagebox 'File open failed!!' 'Error'
    goto exit
endif

filewriteln file 'THIS Test is ERROR. Please check the log.'

return
